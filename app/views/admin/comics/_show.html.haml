.panel
  %h3
    Comic Details
  .panel.contents
    .attributes_table.comic
      %table{ :border => "0", :cellspacing => "0", :cellpadding => "0" }
        %tbody
          %tr
            %th TITLE
            %td 
              = comic.title
          %tr
            %th SHORTNAME
            %td
              = comic.shortname
          %tr
            %th OWNER
            %td
              = render "admin/admin_users/show_small", :locals => {:user => comic.owner }
          %tr
            %th CONTRIBUTORS
            %td
              = comic.contributors.count
              - if comic.contributors != nil || comic.contributors.count < 1
                - comic.contributors.each do |user|
                  = image_tag user.avatar.image.thumb.url
              - else
                NO CONTRIBUTORS
          %tr
            %th ACTIONS
            %td
              = render "admin/comics/contributor_form", :locals => {:comic => comic }